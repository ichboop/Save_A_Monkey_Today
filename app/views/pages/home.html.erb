<div class="home-container">
  <div id="carouselFade" class="carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item">
        <%= image_tag "shariza-hawat-s8vA3hFT8wk-unsplash.jpg", class: "d-block w-100", alt: "Monkey_1.jpg"%>
      </div>
      <div class="carousel-item">
        <%= image_tag "emile-cudelou-8tXY8S9o-yw-unsplash.jpg", class: "d-block w-100", alt: "Monkey_2.jpg"%>
      </div>
      <div class="carousel-item">
        <%= image_tag "michel-stockman-BZklXumjfoU-unsplash.jpg", class: "d-block w-100", alt: "Monkey_3.jpg"%>
      </div>
      <div class="carousel-item">
        <%= image_tag "norbu-gyachung-uEyx-MMn1e8-unsplash.jpg", class: "d-block w-100", alt: "Monkey_4.jpg"%>
      </div>
      <div class="carousel-item active">
        <%= image_tag "pexels-travel-photography-2406756.jpg", class: "d-block w-100", alt: "Monkey_5"%>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselFade" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselFade" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <div class="homeflex">
    <div class="homeflex-item title">
      <h1>Save a monkey today</h1>
      <%= form_tag monkeys_path, method: :get, class:"searchbar" do %>
      <%= text_field_tag :address,
        params[:address],
        class: "form-control",
        placeholder: "Enter your city"
      %>
<!--   <div class="nav-search-button">
 -->
    <%= button_tag(type: "submit") do %>
      <i class="fa fa-search"></i>
      <div class="icon-monkey"> </div>
      <% end %>
    <% end %>
    </div>
      <!-- form class="searchbar" action="/monkeys">
        <input type="text" placeholder="Enter your city" name="search">
       <button type="submit">
          <i class="fa fa-search"></i>
          <div class="icon-monkey"></div>
        </button>
      </form>
      -->
    <div id="map" class="homeflex-item map mapboxgl-ctrl-geocoder--input"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>

