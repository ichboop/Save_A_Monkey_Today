<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>List a new Monkey</h1>

      <%= simple_form_for @monkey do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :city, :label => "Destination" %>
        <%= f.input :address %>
        <%= f.input :species %>
        <%= f.input :photos, as: :file, input_html: { multiple: true }%>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
